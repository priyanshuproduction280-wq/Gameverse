{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the GamerVerse platform.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "User's display name."
        },
        "username": {
          "type": "string",
          "description": "User's unique username."
        },
        "phoneNumber": {
          "type": "string",
          "description": "User's phone number."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture.",
          "format": "uri"
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Grants administrator privileges."
        }
      },
      "required": [
        "uid",
        "email",
        "displayName"
      ]
    },
    "Game": {
      "title": "Game",
      "description": "Represents a game in the GamerVerse store.",
      "type": "object",
      "properties": {
        "slug": {
          "type": "string",
          "description": "A URL-friendly slug for the game."
        },
        "title": {
          "type": "string",
          "description": "The title of the game."
        },
        "platform": {
          "type": "string",
          "enum": [
            "PC"
          ],
          "description": "The platform the game is for."
        },
        "shortDescription": {
          "type": "string",
          "description": "A short summary of the game."
        },
        "description": {
          "type": "string",
          "description": "A full description of the game."
        },
        "price": {
          "type": "number",
          "description": "The price of the game in INR."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the game's primary image."
        },
        "bannerUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the game's banner image."
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tags associated with the game."
        },
        "rating": {
          "type": "number",
          "description": "The game's average user rating (out of 5)."
        },
        "systemRequirements": {
          "type": "object",
          "properties": {
            "os": { "type": "string" },
            "processor": { "type": "string" },
            "memory": { "type": "string" },
            "graphics": { "type": "string" },
            "storage": { "type": "string" }
          },
          "description": "The minimum system requirements to run the game."
        }
      },
      "required": [
        "slug",
        "title",
        "platform",
        "shortDescription",
        "description",
        "price",
        "imageUrl"
      ]
    },
    "Cart": {
      "title": "Shopping Cart",
      "description": "Represents a user's shopping cart. This is a subcollection under a user.",
      "type": "object",
      "properties": {
        "gameId": {
          "type": "string"
        },
        "quantity": {
          "type": "number"
        },
        "title": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "imageUrl": {
          "type": "string"
        }
      },
      "required": [
        "gameId",
        "quantity",
        "title",
        "price"
      ]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a user's order.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "userEmail": {
          "type": "string",
          "format": "email"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "gameId": {
                "type": "string"
              },
              "title": {
                "type": "string"
              },
              "price": {
                "type": "number"
              },
              "quantity": {
                "type": "number"
              }
            },
            "required": [
              "gameId",
              "title",
              "price",
              "quantity"
            ]
          }
        },
        "totalAmount": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Delivered"
          ]
        },
        "createdAt": {
          "type": "number"
        }
      },
      "required": [
        "userId",
        "userEmail",
        "items",
        "totalAmount",
        "status",
        "createdAt"
      ]
    },
    "PaymentQR": {
      "title": "Payment QR Code",
      "description": "Stores the configuration for the current payment QR code.",
      "type": "object",
      "properties": {
        "qrCodeUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the QR code image for payments."
        }
      },
      "required": [
        "qrCodeUrl"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profiles. User ID is the Firebase Auth UID. Includes denormalized 'uid' in the document for simpler security rules."
    },
    "/games/{gameId}": {
      "schema": {
        "$ref": "#/entities/Game"
      },
      "description": "Stores game information. Publicly readable, but only writable by admins."
    },
    "/users/{userId}/carts/{cartId}": {
      "schema": {
        "$ref": "#/entities/Cart"
      },
      "description": "Stores user's cart information. Accessible only by the user."
    },
    "/users/{userId}/orders/{orderId}": {
      "schema": {
        "$ref": "#/entities/Order"
      },
      "description": "Stores order information for each user. Accessible only by the user and admins."
    },
    "/payment_qr/current": {
      "schema": {
        "$ref": "#/entities/PaymentQR"
      },
      "description": "Stores the current payment QR code.  Writable only by admins. Single document collection."
    }
  }
}
